# Database Configuration
DATABASE_URL=sqlite:///store_platform.db
# DATABASE_URL=postgresql://user:password@localhost/store_platform
# DATABASE_URL=mysql://user:password@localhost/store_platform

# Helm Configuration
HELM_CHART_PATH=../helm/store
HELM_VALUES_FILE=values.yaml
# For local development
HELM_ENV_VALUES_FILE=values-local.yaml
# For production
# HELM_ENV_VALUES_FILE=values-prod.yaml

# Kubernetes Configuration
# Leave empty to use default kubeconfig
# KUBECONFIG=/path/to/kubeconfig

# Provisioning Configuration
# Maximum time to wait for a store to become ready (in seconds)
PROVISIONING_TIMEOUT_SECONDS=600
# Interval between Kubernetes readiness checks (in seconds)
PROVISIONING_POLL_INTERVAL_SECONDS=5

# Domain Configuration
# Base domain for store URLs
# For local development with Kind/Minikube
BASE_DOMAIN=localhost
# For production
# BASE_DOMAIN=yourdomain.com

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000
